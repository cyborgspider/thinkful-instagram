html(ng-app="InstangularApp")
  head
    title Thinkful Instagram
    link(href="http://fonts.googleapis.com/css?family=Oswald", rel="stylesheet")
    link(href="css/styles.css", rel="stylesheet")
  body
    .container(ng-controller="instagramFetchCtrl")
      h1 Instangular 
      form.input-wrap(ng-submit="fetchPhotos()", novalidate, name="instaForm")
        input(type="text", ng-model="tag", required, name="tag")
        input.button(type="submit", value="Search Tags") Search Tags

      p(ng-if="searchInProgress") Searching Instagram for photos tagged with {{ tag }}.
      p(ng-if="invalidForm") Please search for an Instagram tag.
      p(ng-if="inappropriateTag") Sorry, this tag is deemed inappropriate by Instagram. Try another tag.
      p(ng-if="noPictures") We found 0 results for {{ cachedTag }}
      p(ng-if="errorFetching") Sorry, there was an error with the search. Please try again.
      p(ng-if="picturesReceived") We found {{ picturesReceived.length }} results for {{ cachedTag }}.

      ul.results-list(ng-show="fetchPhotos")
        li(ng-repeat="picture in picturesReceived")
          a(ng-href="{{ picture.link }}")
            img(ng-src="{{ picture.images.thumbnail.url }}", alt="{{ picture.caption.text}}")



    script(src="http://code.jquery.com/jquery-2.0.3.min.js")
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular.min.js")
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-animate.js")
    script(src="js/InstangularApp.js")