global-reset()

*
  &:before
  &:after
    box-sizing border-box

html
body
  -webkit-font-smoothing antialiased
  font-size              100%
  height                 100%

body
  background #517fa4
  color      #f1f1f1
  font       1.2rem/1.5 "Geneva","Helvetica", "Arial", sans-serif


.container
  margin    0 auto
  max-width 60rem
  padding   0 2rem

h1
  font-family 'Oswald'
  font-size   4rem
  font-weight 400
  padding     2rem 0 3rem
  text-align  center
  text-shadow 1px 1px 5px #666

p
  text-align    center
  margin-bottom 1rem

input[type="text"]
  background    #fff
  border        none
  border-radius 20px
  bottom        0
  box-shadow    none
  color         #555
  font-size     2rem
  left          -2px
  line-height   48px
  padding-left  1rem
  position      absolute
  right         2rem
  top           0

  &:focus
  &:active
    box-shadow none
    outline    0

.input-wrap
  background    #fff
  border        solid 1px #ddd
  border-radius 20px
  height        48px
  margin        0 auto 2rem
  max-width     30rem
  position      relative


.button
  -webkit-appearance         none
  -webkit-font-smoothing     antialiased
  background-image           linear-gradient(top, #99C584, #99C584)
  border                     none
  border-bottom-right-radius 20px
  border-top-right-radius    20px
  box-sizing                 border-box
  color                      #fff
  cursor                     pointer
  font-size                  1rem
  font-weight                bold
  height                     48px
  line-height                48px
  outline                    none
  padding                    0 1.5rem
  position                   absolute
  right                      -2px
  text-align                 center
  text-decoration            none
  text-shadow                1px 1px 5px #666
  user-select                none
  white-space                no-wrap

  &:hover
    background linear-gradient(top, #99C584 40%, #529234 100%)

.results-list
  clearfix()
  text-align center

  & > li
    display       inline-block
    margin-right  .75rem
    margin-bottom .75rem

    &.ng-enter-stagger
      transition-delay    0.2s
      transition-duration 0

    &.ng-enter
      opacity    0
      transition opacity 0.2s ease-in

      &.ng-enter-active
        opacity 1
